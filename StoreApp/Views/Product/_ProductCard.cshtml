@model Product


<div class="col-sm-12 col-md-4 my-3 ">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model?.ImageUrl" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
             <div class="btn btn-group"> @* btn group ile iki butonun yan yana gelmesini sağladık *@
                <a asp-action="Get" asp-route-id=@Model.ProductId class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right"></i>
                    Details
                </a>
                <form id="@Model.ProductId" asp-page="/Cart" method="post">
                    <input type="hidden" asp-for="ProductId"/>
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
