@model ProductDtoForUpdate

<div class="text-center" >
     <div class="display-6 my-4" >Create</div>
</div>

<form method="post" asp-action="Update" >
    <div class="text-danger" asp-validation-summary="All"></div>  @*validasyon mesajları burada kırmızıyla yazılır *@
   
   <input type="hidden" asp-for="ProductId" />
   
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>

    <div class="form-group my-3" >
        <label asp-for="ProductName" ></label>
        <input asp-for="ProductName" class="form-control"/>
    </div>
    <div class="form-group my-3" >
        <label asp-for="Price" ></label>
        <input asp-for="Price" class="form-control"/>
    </div>
    <div class="form-group my-3" >
        <div class="btn-group" >
        <button class="btn btn-primary" type="submit" >
            <i class="fa fa-save"></i> Update
        </button>
        <a class="btn btn-outline-primary" asp-action="Index">
           <i class="fa fa-list"></i>  Products
        </a>
        </div>
    </div>
</form>