@model IEnumerable<Category>

<div class="text-center">
    <div class="display-6 my-4">Categories</div>
</div>

<div class="text-center">
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i> Create</a>
    </div>
</div>

<div class="container mx-5">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.CategoryId</td>
                        <td>@cat.CategoryName</td>
                        <td>
                            <div class="btn-group">
                                <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning rounded-0"
                                    asp-action="Update" asp-route-id="@cat.CategoryId">
                                    <i class="fa fa-edit"></i></a>
                                <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger rounded-0"
                                    asp-action="Delete" asp-route-id="@cat.CategoryId">
                                    <i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}

